{% extends 'base.html.twig' %}

{% block title %}Lots{% endblock %}

{% block body %}
    <h1>Edition des Lots</h1>

    <section class="section-admin-lots cadreblue">
        <a class="new-lot-admin" href="{{ path('admin_lots_new') }}"><button class="inputneonpurple">Ajouter un nouveau lot</button></a>
        <table>
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Prix</th>
                    <th>Editer</th>
                    <th>Supprimer</th>
                </tr>
            </thead>
            <tbody>
                {% for lot in lots %}
                    <tr>
                        <td>{{ lot.title }}</td>
                        <td>{{ lot.price }}</td>
                        <td class="table-edit"><a href="{{ path('admin_lots_edit', {'lotId': lot.id}) }}"><button class="inputneonpurple">Editer</button></a></td>
                        <td class="table-edit">{{ include('admin/admin_lots/_delete_lots.html.twig') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}
