{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class="inscription">Inscription</h1>

    <section class="cadreblue container-fomr-register">   
        {{ form_start(registrationForm, {"attr": {"class": "form-register"}}) }}
        {{ form_errors(registrationForm) }}
            {{ form_widget(registrationForm.firstname) }}
            {{ form_widget(registrationForm.lastname)}}
            {{ form_row(registrationForm.birthdate)}}
            {{ form_widget(registrationForm.email) }}
            {{ form_widget(registrationForm.username)}}
            {{ form_widget(registrationForm.plainPassword) }}
            <div class="form-agree-terms">
                {{ form_label(registrationForm.agreeTerms) }}
                {{ form_widget(registrationForm.agreeTerms) }}
            </div>
            <button type="submit" class="inputneonpurple">Valider</button>
        {{ form_end(registrationForm) }}
        <a class="redirectbutton" href="{{ path('app_login') }}"><button class="inputneonpurple"> Déjà membre?</button></a>
    </section>
{% endblock %}
